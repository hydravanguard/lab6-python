h = int(input("Введіть висоту ялинки: "))

# Перевірка коректності введення
if h <= 0:
    print("Висота має бути додатним числом!")
else:
    print("Малюю ялинку висотою", h)
    print()

    i = 1  # лічильник рядків

    # цикл while для рядків
    while i <= h:

        # кількість пробілів зліва
        spaces = h - i

        # цикл for для виведення пробілів
        for s in range(spaces):
            print(" ", end="")

        # цикл for для виведення зірочок
        for star in range(2 * i - 1):
            print("*", end="")

        print()  # перехід на новий рядок
        i += 1   # збільшення лічильника

    print("\nГотово!")
